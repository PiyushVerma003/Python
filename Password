import random
case_string = input("Enter the words you wanna have in the randomly generated password it can be your name: ")
case_number = input("Enter the number you want in your randomly generated password: ")
case_symbols =input("Enter the symbols you wanna have in the randomly generated password is: ")
case_formula = case_string + case_number + case_symbols
length_of_the_password = int(input("Enter the length of the password you wanna generate: "))
password = "".join(random.sample(case_formula , length_of_the_password))
print("Your randomly generated password is: " + password)
